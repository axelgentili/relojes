<script>
  function fmtDate(timeZone){
    const now = new Date();
    return new Intl.DateTimeFormat('es-ES', {
      timeZone,
      weekday: 'short',
      day: '2-digit',
      month: 'short',
      year: 'numeric'
    }).format(now);
  }

  function fmtTime(timeZone){
    const now = new Date();
    return new Intl.DateTimeFormat('es-ES', {
      timeZone,
      hour: '2-digit',
      minute: '2-digit',
      second: '2-digit',
      hour12: false
    }).format(now);
  }

  function refreshClocks(){
    document.getElementById('date-ar').textContent = fmtDate('America/Argentina/Buenos_Aires');
    document.getElementById('time-ar').textContent = fmtTime('America/Argentina/Buenos_Aires');

    document.getElementById('date-mx').textContent = fmtDate('America/Mexico_City');
    document.getElementById('time-mx').textContent = fmtTime('America/Mexico_City');

    document.getElementById('date-es').textContent = fmtDate('Europe/Madrid');
    document.getElementById('time-es').textContent = fmtTime('Europe/Madrid');
  }

  
  const WORLD_CUP_START_UTC = new Date(Date.UTC(2026, 5, 11, 0, 0, 0));

  function refreshCountdown(){
    const now = new Date();
    const diffMs = WORLD_CUP_START_UTC.getTime() - now.getTime();

    if (diffMs <= 0){
      document.getElementById('countdown').textContent = "¬°Ya empez√≥!";
      return;
    }

    const totalSeconds = Math.floor(diffMs / 1000);
    const days = Math.floor(totalSeconds / 86400);
    const hours = Math.floor((totalSeconds % 86400) / 3600);
    const mins = Math.floor((totalSeconds % 3600) / 60);

    document.getElementById('countdown').textContent =
      `${days} d√≠as ¬∑ ${String(hours).padStart(2,'0')}h ${String(mins).padStart(2,'0')}m`;
  }

  function tick(){
    refreshClocks();
    refreshCountdown();
  }

  setInterval(tick, 1000);
  tick();
</script>
